generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  name       String
  email      String       @unique
  password   String
  role       Role         @default(user)
  status     UserStatus   @default(active)
  department String
  lastAccess DateTime     @default(now())
  avatar     String?
  companyId  String
  company    Company      @relation(fields: [companyId], references: [id])
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt
  activities Activity[]
  notifications Notification[]

  @@map("users")
}

model Company {
  id        String    @id @default(uuid())
  name      String
  cnpj      String    @unique
  email     String
  phone     String
  address   String
  logo      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  users     User[]
  products  Product[]
  invoices  Invoice[]
  activities Activity[]

  @@map("companies")
}

model Product {
  id          String       @id @default(uuid())
  name        String
  category    String
  stock       Int          @default(0)
  minimum     Int          @default(10)
  price       Decimal      @db.Decimal(10, 2)
  description String?
  sku         String?
  status      ProductStatus @default(normal)
  companyId   String
  company     Company      @relation(fields: [companyId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt

  @@map("products")
}

model Invoice {
  id        String       @id @default(uuid())
  number    String
  type      InvoiceType
  date      DateTime
  value     Decimal      @db.Decimal(12, 2)
  status    InvoiceStatus @default(pending)
  supplier  String
  fileName  String
  fileSize  Int
  filePath  String?
  companyId String
  company   Company      @relation(fields: [companyId], references: [id])
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now()) @updatedAt

  @@map("invoices")
}

model Notification {
  id        String           @id @default(uuid())
  title     String
  message   String
  type      NotificationType @default(info)
  read      Boolean          @default(false)
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  createdAt DateTime         @default(now())

  @@map("notifications")
}

model Activity {
  id          String   @id @default(uuid())
  action      String
  description String
  icon        String
  color       String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  createdAt   DateTime @default(now())

  @@map("activities")
}

enum Role {
  admin
  manager
  user
}

enum UserStatus {
  active
  inactive
}

enum ProductStatus {
  normal
  low
  critical
}

enum InvoiceType {
  NFe
  NFCe
}

enum InvoiceStatus {
  processed
  pending
  error
}

enum NotificationType {
  info
  warning
  error
  success
}